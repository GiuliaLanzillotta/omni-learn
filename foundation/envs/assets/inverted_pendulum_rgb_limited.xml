<mujoco model="inverted pendulum">
	<compiler inertiafromgeom="true"/>
	<asset>
		<!--<texture builtin="flat" name="rail_tex" height="32" width="32" rgb1="1 1 1" rgb2="1 1 1" type="2d"/>-->
		<!--<texture builtin="flat" name="cart_tex" height="32" width="32" rgb1="1 1 1" rgb2="1 1 1" type="2d"/>-->
		<!--<texture builtin="flat" name="pole_tex" height="32" width="32" rgb1="1 1 1" rgb2="1 1 1" type="2d"/>-->
		<material name="mat"  shininess="0.5" specular="0.5"/>
	</asset>
	<visual>
		<map znear="0.2" zfar="3"/>
	</visual>
	<statistic extent="1" />
	<default>
		<joint armature="0" damping="1" limited="false"/>
		<geom contype="0" friction="1 0.1 0.1" />
		<light castshadow="false"/>
		<tendon/>
		<motor ctrlrange="-1 1"/>
	</default>
	<option gravity="0 0 -9.81" integrator="RK4" timestep="0.02"/>
	<size nstack="3000"/>
	<worldbody>
		<camera name="cam" mode="fixed" pos="0 -2 0" euler="90 0 0" fovy="45"/>
		<!--<light dir="0 1 0" pos="0 -2 0" specular="1 1 1" diffuse="1 1 1"/>-->
		<geom name="rail" pos="0 0 0" quat="0.707 0 0.707 0" rgba="0.9 0.9 0.9 1" material="mat" mass="1" size="0.02 1.2" type="capsule"/>
		<body name="cart" pos="0 0 0">
			<joint axis="1 0 0" limited="true" name="slider" pos="0 0 0" range="-1.2 1.2" type="slide" frictionloss="0.5"/>
			<geom name="cart" pos="0 0 0" quat="0.707 0 0.707 0" rgba="0.8 0.9 0.1 1" material="mat" mass="2" size="0.1 0.1" type="capsule"/>
			<body name="pole" pos="0 0 0">
				<joint axis="0 1 0" name="hinge" pos="0 0 0" type="hinge" frictionloss="0.1"/>
				<geom fromto="0 0 0 0.001 0 0.6" name="pole" rgba="0.4 0.8 0.8 1" material="mat" mass="2" size="0.049 0.3" type="capsule"/>
			</body>
		</body>
	</worldbody>
	<actuator>
		<motor gear="100" joint="slider" name="slide"/>
	</actuator>
	
</mujoco>
